@using Media_Upload_System.Models
@model List<FileModel>
@{
    ViewBag.Title = "Downloader";
}
@*Navbar*@
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
@*Navbar was here*@
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "margin-left: 10px" })
    <button style="margin-right: 10px" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li>@Html.ActionLink("Files", "Index", "FileDownload", new { area = "" }, new { @class = "nav-link", style = "margin-left: 10px" })</li>
            <li>@Html.ActionLink("Images", "Index", "ImageDownload", new { area = "" }, new { @class = "nav-link", style = "margin-left: 10px" })</li>
            <li>@Html.ActionLink("Videos", "Index", "VideoDownload", new { area = "" }, new { @class = "nav-link", style = "margin-left: 10px" })</li>
            <li>@Html.ActionLink("About Me", "About", "Home", new { area = "" }, new { @class = "nav-link", style = "margin-left: 10px" })</li>
        </ul>
    </div>
</nav>
<h1 style=" margin-bottom: 15px;font-weight:normal">Documents of any file type</h1>
<h4 style=" margin-bottom: 15px; font-weight:normal"> --------"Media/Documents/" folder </h4>
<div style="height: 400px; overflow: auto;background-color:aliceblue;">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr style="color:white;background-color:darkgray " class="auto-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="t, col-lg-2">DOWNLOAD</th>
                    <th class="t, col-lg-2">DELETE</th>
                </tr>
            </thead>
            @foreach (FileModel file in Model)
            {
                <tr>

                    <td>@file.FileName</td>
                    <td>
                        <button style=" background-color:green; color: white">
                            @Html.ActionLink("Download", "DownloadFile",
                             new { fileName = file.FileName, filePath1 = file.filepath})
                        </button>
                    </td>
                    <td>
                        <button style=" background-color:red; color: white">
                            @Html.ActionLink("DELETE", "DeleteFile",
                           new { fileName = file.FileName, filePath2 = file.filepath},
                           new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

